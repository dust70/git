[core]
    compression = 9
    editor = vim
    excludesfile = ~/.gitignore
    loosecompression = 9
    notesRef = true
    preloadindex = true

[add]
    ignore-errors = true

[alias]
    ac = commit --all --branch --status
    ad = add --all --ignore-errors --
    ba = branch -a --verbose
    br = branch --verbose
    ca = commit -q --branch --status --amend
    cf = checkout --quiet --force
    cl = clone --progress
    cm = commit --branch --status
    cn = !"find . \\( -iname '*.orig' -o -name '*.BASE.*' -o -name '*.LOCAL.*' -o -name '*.REMOTE.*' -o -name '*.BACKUP.*' \\) -delete && git reflog expire --all && git fsck --unreachable --full && git prune && git gc --aggressive --quiet && git repack -Adq && git prune-packed --quiet"
    co = checkout
    cp = cherry-pick
    dt = difftool
    fe = fetch --prune --progress
    fm = !"git fe --all && git fe --all --tags"
    gr = grep --line-number --heading
    la = !"GIT_PAGER=less git log --all --pretty=graph --date=short --abbrev-commit --graph"
    lg = log --stat
    lo = !"GIT_PAGER=less git log --pretty=graph --date=short --abbrev-commit --graph"
    lm = log --merges --stat
    lp = log -10 --patch-with-stat
    ls = ls-files -cdkmosu --no-empty-directory --exclude-standard --full-name --
    ma = merge --abort
    me = merge --stat --summary
    mm = !"git me origin/$(git branch-name)"
    mt = mergetool --no-prompt
    pa = !"for i in $(git remote); do git push --all --progress ${i}; done"
    pd = push --delete --progress --tags
    pf = !"git push --force --progress --tags origin $(git branch-name)"
    pg = !"git ph --force github $(git branch-name)"
    ph = push --progress --tags
    pu = !"for i in $(git remote); do git ph ${i} $(git branch-name); done"
    ra = rebase --abort
    rc = rebase --continue
    re = reset
    rh = reset --hard
    ri = !"(git sa || true) && git rh --quiet $(git rev-list --reverse HEAD | head -n 1) && git merge --quiet origin/$(git for-each-ref --format='%(refname:short)' $(git symbolic-ref HEAD)); (git so || true)"
    rp = rebase --skip
    rs = reset --soft
    rv = remote --verbose
    sa = stash save
    sb = !"git br && git sr \"git br\""
    sc = stash clear
    se = !"git rebase --interactive $(git rev-list --reverse HEAD | head -n 1)"
    sf = !"git sm foreach"
    sl = stash list
    sm = submodule
    so = stash pop
    sr = !"git sf --recursive"
    ss = !"git st && git sf \"git st -s; echo\" && git sm status --recursive"
    st = status
    su = !"git upre && echo && git sr \"git upre\" && git sm -q sync && git ss"
    sw = stash show
    tg = !"git tag -s -m $(date '+%F') $(date '+%F')"

    aliases = config --get-regexp "^alias"
    cam = !"git co amalthea && git rebase -n origin/amalthea"
    cde = !"git co desktop && git rebase -n origin/desktop"
    ceu = !"git co europa && git rebase -n origin/europa"
    cga = !"git co ganymed && git rebase -n origin/ganymed"
    chi = !"git co himalia && git rebase -n origin/himalia"
    cio = !"git co io && git rebase -n origin/io"
    ;cly = !"git co lysithea && git rebase -n origin/lysithea"
    cma = !"git co master && git rebase -n origin/master"
    ;cpa = !"git co pasiphae && git rebase -n origin/pasiphae"
    cse = !"git co server && git rebase -n origin/server"

    clo = !"git co development && git rebase -n origin/development"

    brup = !"git fm && git branch --column=never --list --no-color | \
        xargs -I {} sh -c 'i=\"{}\" && git co ${i//\\*/} && git ri >> /dev/null' && git cma"

    add-new = !"git ls-files -zo --no-empty-directory --exclude-standard --full-name | \
        xargs -I {} -0 sh -c 'git add \"{}\" && git cm -m \"add file {} to repository\"'"
    update = !"git ls-files -zm --no-empty-directory --exclude-standard --full-name | \
        xargs -I {} -0 sh -c 'git add \"{}\" && git cm -m \"update file {} in repository on date $(date \"+%F\")\"'"
    remove = !"git ls-files -zd --no-empty-directory --exclude-standard --full-name | \
        xargs -I {} -0 sh -c 'git rm \"{}\" && git cm -m \"remove file {} from repository\"'"

    rde = rebase desktop
    rma = rebase master
    rse = rebase server

    rlo = rebase origin/development

    branch-name = !"git for-each-ref --format='%(refname:short)' $(git symbolic-ref HEAD)"
    total-clean = "!git co -f && git clean -dfx && git clean -dfX"
    upre = !"git fm && git ri && while ! $(git cn >| /dev/null); do true; done"
    uppush = !"git update && git pu"

[apply]
    ignorewhitespace = change
    whitespace = nowarn

[branch]
    autosetuprebase = always

[clean]
    requireForce = true

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    showbranch = auto
    status = auto
    ui = auto

[color "branch"]
    current = green normal bold
    local = yellow normal bold
    plain = white normal bold
    remote = red normal bold

[color "status"]
    added = green normal bold
    updated = green normal bold
    changed = yellow normal bold
    nobranch = red white blink
    untracked = red normal bold

[commit]
    status = true

[credential]
    helper = cache

[diff]
    guitool = gvimdiff
    mnemonicprefix = true
    renames = copy
    tool = vimdiff

[format]
    thread = deep

[gc]
    pruneexpire = 1 day ago
    reflogexpire = 1 day ago
    reflogexpireunreachable = 1 day ago

[gui]
    commitmsgwidth = 72
    diffcontext = 3
    encoding = UTF-8
    fontdiff = -family Terminus -size 8 -weight normal -slant roman -underline 0 -overstrike 0
    fontui = -family Terminus -size 8 -weight normal -slant roman -underline 0 -overstrike 0
    pruneduringfetch = true
    spellingdictionary = en_US

[help]
    autocorrect = 10
    format = man

[i18n]
    commitEncoding = UTF-8
    logOutputEncoding = UTF-8

[interactive]
    singlekey = false

[log]
    date = iso
    showroot = true

[merge]
    log = true
    stat = true
    tool = vimdiff
    verbosity = 5

[merge "sqlite3"]
    name = sqlite3 merge driver
    driver = merge-sqlite3 %O %A %B

[pack]
    compression = 9

[pretty]
    graph = format:%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset

[push]
    default = matching

[rebase]
    autosquash = true
    stat = true

[receive]
    autogc = true
    fsckObjects = true
    updateserverinfo = true

[status]
    relativePaths = false
    showUntrackedFiles = all


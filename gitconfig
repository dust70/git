[core]
    compression = 9
    editor = vim
    excludesfile = ~/.gitignore
    loosecompression = 9
    notesRef = true
    preloadindex = true

[add]
    ignore-errors = true

[alias]
    ac = commit --all
    ad = add --all --ignore-errors --
    ba = branch -a --verbose
    br = branch --verbose
    ca = commit --amend -q
    cl = clone --progress
    cm = commit
    cn = !"find . \\( -iname '*.orig' -o -name '*.BASE.*' -o -name '*.LOCAL.*' -o -name '*.REMOTE.*' -o -name '*.BACKUP.*' \\) -delete && git reflog expire --all && git fsck --unreachable --full && git prune && git gc --aggressive --quiet && git repack -Adq && git prune-packed --quiet"
    co = checkout
    cp = cherry-pick
    dt = difftool
    fe = fetch --prune --progress
    fm = !"git fe origin && git fe --tags origin"
    gr = grep --line-number --heading
    lg = log --stat
    ls = ls-files --cached --deleted --modified --others --stage --exclude-standard --
    ma = merge --abort
    me = merge --stat --summary
    mm = !"git me origin/$(git branch-name)"
    mt = mergetool --no-prompt
    pa = push --all --progress origin
    ph = push --tags --progress
    pu = !"git ph origin $(git branch-name)"
    ra = rebase --abort
    rc = rebase --continue
    re = reset
    rh = reset --hard
    ri = !"(git sa || true) && git rh $(git rev-list --reverse HEAD | head -n 1) && git merge --stat --summary origin/$(git for-each-ref --format='%(refname:short)' $(git symbolic-ref HEAD)); (git so || true)"
    rp = rebase --skip
    rs = reset --soft
    rv = remote --verbose
    sa = stash save
    sb = !"git br && git sr \"git br\""
    sc = stash clear
    se = !"git rebase --interactive $(git rev-list --reverse HEAD | head -n 1)"
    sf = !"git sm foreach"
    sl = stash list
    sm = submodule
    so = stash pop
    sr = !"git sf --recursive"
    ss = !"git st && git sf \"git st -s; echo\" && git sm status --recursive"
    st = status
    su = !"git upre && echo && git sr \"git upre\" && git sm -q sync && git ss"
    sw = stash show

    cam = !"git co amalthea && git rebase -n origin/amalthea"
    cde = !"git co desktop && git rebase -n origin/desktop"
    cga = !"git co ganymed && git rebase -n origin/ganymed"
    chi = !"git co himalia && git rebase -n origin/himalia"
    cio = !"git co io && git rebase -n origin/io"
    cma = !"git co master && git rebase -n origin/master"
    cse = !"git co server && git rebase -n origin/server"

    rde = rebase --verbose desktop
    rma = rebase --verbose master
    rpu = rebase --verbose public
    rse = rebase --verbose server

    scl = svn clone
    scm = svn dcommit
    sfe = svn fetch
    sgc = svn gc
    slg = svn log --show-commit

    branch-name = !"git for-each-ref --format='%(refname:short)' $(git symbolic-ref HEAD)"
    total-clean = "!git co -f && git clean -dfx && git clean -dfX"
    upre = !"git fm && git ri && while ! $(git cn); do true; done"

[apply]
    ignorewhitespace = change
    whitespace = nowarn

[branch]
    autosetuprebase = always

[clean]
    requireForce = true

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    showbranch = auto
    status = auto
    ui = auto

[color "branch"]
    current = green normal bold
    local = yellow normal bold
    plain = white normal bold
    remote = red normal bold

[color "status"]
    added = green normal bold
    updated = green normal bold
    changed = yellow normal bold
    nobranch = red white blink
    untracked = red normal bold

[commit]
    status = true

[diff]
    guitool = gvimdiff
    mnemonicprefix = true
    renames = copy
    tool = vimdiff

[diff "odf"]
    textconv=odt2txt

[format]
    thread = deep

[gc]
    pruneexpire = 1 day ago
    reflogexpire = 1 day ago
    reflogexpireunreachable = 1 day ago

[gui]
    commitmsgwidth = 72
    diffcontext = 3
    encoding = utf-8
    fontdiff = -family Terminus -size 8 -weight normal -slant roman -underline 0 -overstrike 0
    fontui = -family Terminus -size 8 -weight normal -slant roman -underline 0 -overstrike 0
    pruneduringfetch = true
    spellingdictionary = en_US

[help]
    autocorrect = 10
    format = man

[i18n]
    commitEncoding = utf8
    logOutputEncoding = utf8

[interactive]
    singlekey = false

[log]
    date = iso
    showroot = true

[merge]
    log = true
    stat = true
    tool = vimdiff
    verbosity = 5

[pack]
    compression = 9

[push]
    default = matching

[rebase]
    autosquash = true
    stat = true

[receive]
    autogc = true
    fsckObjects = true
    updateserverinfo = true

[status]
    relativePaths = false
    showUntrackedFiles = all


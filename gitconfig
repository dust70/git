[tig]
    author-width = 15
    horizontal-scroll = 95%
    line-graphics = utf-8
    line-number-interval = 5
    show-date = true
    show-line-numbers = true
    show-refs = true
    show-rev-graph = true
    tab-size = 4

[giggle]
    file-view-vpane-position = 800
    history-view-vpane-position = 610
    main-window-geometry = 1024x768+13+0
    main-window-maximized = false
    main-window-view = HistoryView
    show-graph = true


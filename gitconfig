[core]
    compression = 9
    editor = vim
    excludesfile = ~/.gitignore
    loosecompression = 9
    notesRef = true
    preloadindex = true

[add]
    ignore-errors = true

[alias]
    ac = commit --all
    ad = add --verbose --all --ignore-errors --
    ba = branch -a --verbose
    br = branch --verbose
    ca = commit --amend -q
    cl = clone --verbose --progress
    cm = commit
    cn = !"find . \\( -iname '*.orig' -o -name '*.BASE.*' -o -name '*.LOCAL.*' -o -name '*.REMOTE.*' -o -name '*.BACKUP.*' \\) -delete && git reflog expire && git fsck --unreachable --full && git prune && git gc --aggressive && git repack -Ad && git prune-packed"
    co = checkout
    cp = cherry-pick --edit
    dt = difftool
    fe = fetch --prune --verbose --progress
    fm = !"git fe origin && git fe --tags origin"
    lg = log --stat
    ls = ls-files --cached --modified --others --exclude-standard --
    me = merge --stat --summary --verbose
    mm = !"git me origin/$(git branch-name)"
    mt = mergetool --no-prompt
    pa = push --all --verbose --progress origin
    ph = push --tags --verbose --progress
    pl = pull --verbose --progress --rebase
    pm = !"git pl origin $(git branch-name)"
    pu = !"git ph origin $(git branch-name)"
    ra = rebase --abort
    rc = rebase --continue
    re = rebase --skip
    rh = reset --hard
    ri = rebase --interactive
    rs = reset --soft
    rv = remote --verbose
    sa = stash save
    sb = !"git br && git sr \"git br\""
    sc = stash clear
    se = !"git ri $(git rev-list --reverse HEAD | head -n 1)"
    sf = !"git sm foreach"
    sl = stash list
    sm = submodule
    so = stash pop
    sp = !"git sf \"git pu; git st -s; echo\"; git pu; git st -s"
    sr = !"git sf --recursive"
    ss = !"git st && git sf \"git st -s; echo\" && git sm status --recursive"
    st = status
    su = !"(git upre || true) && echo && git sr \"(git upre || true)\" && git sm -q sync && git ss"

    cal = !"git co aldebaran && git rebase -n origin/aldebaran"
    cam = !"git co amalthea && git rebase -n origin/amalthea"
    cde = !"git co desktop && git rebase -n origin/desktop"
    cio = !"git co io && git rebase -n origin/io"
    cma = !"git co master && git rebase -n origin/master"
    cvs = !"git co vserver && git rebase -n origin/vserver"

    rde = rebase --verbose desktop
    rma = rebase --verbose master
    rpu = rebase --verbose public

    scl = svn clone
    scm = svn dcommit
    sfe = svn fetch
    sgc = svn gc
    slg = svn log --show-commit

    branch-name = !"git for-each-ref --format='%(refname:short)' $(git symbolic-ref HEAD)"
    total-clean = "!git co -f && git clean -dfx && git clean -dfX"
    upre = !"git fm -q && git sa; git rh $(git rev-list --reverse HEAD | head -n 1) && git merge -q origin/$(git for-each-ref --format='%(refname:short)' $(git symbolic-ref HEAD)) && git so && while ! $(git cn); do true; done"

[apply]
    ignorewhitespace = change
    whitespace = nowarn

[branch]
    autosetuprebase = always

[clean]
    requireForce = true

[color]
    branch = auto
    diff = false
    grep = false
    interactive = auto
    pager = false
    showbranch = auto
    status = auto
    ui = auto

[color "branch"]
    current = green normal bold
    local = yellow normal bold
    plain = white normal bold
    remote = red normal bold

[color "status"]
    added = green normal bold
    updated = green normal bold
    changed = yellow normal bold
    nobranch = red white blink
    untracked = red normal bold

[commit]
    status = true

[diff]
    guitool = gvimdiff
    mnemonicprefix = true
    renames = copy
    tool = vimdiff

[format]
    thread = deep

[gc]
    pruneexpire = 1 day ago
    reflogexpire = 1 day ago
    reflogexpireunreachable = 1 day ago

[gui]
    commitmsgwidth = 72
    diffcontext = 3
    encoding = utf-8
    fontdiff = -family Terminus -size 8 -weight normal -slant roman -underline 0 -overstrike 0
    fontui = -family Terminus -size 8 -weight normal -slant roman -underline 0 -overstrike 0
    pruneduringfetch = true
    spellingdictionary = en_US

[help]
    autocorrect = 10
    format = man

[i18n]
    commitEncoding = utf8
    logOutputEncoding = utf8

[interactive]
    singlekey = false

[log]
    date = iso
    showroot = true

[merge]
    log = true
    stat = true
    tool = vimdiff
    verbosity = 5

[pack]
    compression = 9

[push]
    default = matching

[rebase]
    autosquash = true
    stat = true

[receive]
